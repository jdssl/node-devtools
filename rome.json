{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 4,
    "lineWidth": 120,
    "ignore": []
  },
  "files": {
    "ignore": ["node_modules/*.(js|ts)", "./dist/*.js"]
  }
}
